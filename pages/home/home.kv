<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        FloatLayout:
            size_hint_y: 0.2

            ClickableImage:
                source: 'assets/images/menu_button.png'
                size_hint: None, None
                size: 100, 100
                pos_hint: {'x': 0.025, 'top': 1}
                on_release:
                    app.root.transition.direction = 'right'
                    app.root.current = 'standby'

            ClickableImage:
                source: 'assets/images/light_button.png'
                size_hint: None, None
                size: 100, 100
                pos_hint: {'x': 0.25, 'top': 0.5}
                on_release:
                    root.switch_light()

            ClickableImage:
                source: 'assets/images/aspiration_button.png'
                size_hint: None, None
                size: 100, 100
                pos_hint: {'x': 0.475, 'top': 1}
                on_release:
                    root.switch_aspiration()
        
        FloatLayout:
            size_hint_y: 0.6

            Image:
                source: "assets/images/rounded_faded_rect.png"
                size_hint: None, None
                size: 480, 300
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

            Label:
                text: '{:.0f}'.format(root.value) + "°C"
                color: 1, 1, 0, 1
                bold: True
                font_size: '64sp'
                outline_width: 15
                outline_colour: (0, 0, 0, 1)

                size_hint: None, None
                size: self.texture_size
                # Allineata orizzontalmente al centro dell'immagine
                x: (root.width / 2) - (self.width / 2)
                # Verticalmente: posiziona la label poco sopra il bordo superiore dell'immagine
                y: (root.height / 2 + 300 / 2) - self.height / 2 - 20
            
            BoxLayout:
                orientation: 'vertical'
                spacing: 5
                size_hint: None, None
                size: 300, 300
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                TemperatureControl:
                    value: root.top_temp

                TemperatureControl:
                    value: root.middle_temp
                    trail: "°C"

                TemperatureControl:
                    value: root.bottom_temp
        
        FloatLayout:
            size_hint_y: 0.2

            Slider:
                min: 0
                max: 500
                value: root.value
                size_hint_x: 0.5
                pos_hint: {'x': 0, 'top': 1}
                on_value: root.value = self.value

            ClickableImage:
                source: 'assets/images/exit_button.png'
                size_hint: None, None
                size: 125, 125
                pos_hint: {'x': 0.6, 'y': 0.1}
                on_release:
                    app.root.transition.direction = 'right'
                    app.root.current = 'standby'
